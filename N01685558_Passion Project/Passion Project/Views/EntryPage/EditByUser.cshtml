@model Passion_Project.Models.EntriesDto

@{
    ViewData["Title"] = "Edit Entry";
}

<style>
    body {
        background-color: black;
        color: white;
        font-family: 'Poppins', sans-serif;
    }

    .edit-entry-container {
        max-width: 900px;
        margin: 40px auto;
        padding: 20px;
    }

    .edit-entry-header {
        text-align: center;
        margin-bottom: 30px;
    }

    .card {
        background: rgba(25, 25, 25, 0.9);
        padding: 2rem;
        border-radius: 12px;
        box-shadow: 0 0 15px rgba(255, 255, 255, 0.1);
        margin-bottom: 20px;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

        .card:hover {
            transform: translateY(-3px);
            box-shadow: 0 0 20px rgba(255, 255, 255, 0.15);
        }

    .form-group label {
        color: floralwhite;
        font-weight: bold;
    }

    .form-control {
        background: rgba(50, 50, 50, 0.8);
        color: white;
        border: none;
        border-radius: 6px;
        padding: 10px;
        font-size: 1rem;
    }

        .form-control:focus {
            color: floralwhite;
            background: rgba(80, 80, 80, 0.8);
            box-shadow: 0 0 10px rgba(255, 255, 255, 0.2);
        }

    .text-danger {
        font-size: 0.875rem;
    }

    .btn {
        display: inline-block;
        padding: 12px 20px;
        border-radius: 6px;
        font-weight: bold;
        text-decoration: none;
        transition: all 0.3s ease;
    }

    .btn-primary {
        background: linear-gradient(135deg, #ff416c, #ff4b2b);
        color: white;
        border: none;
    }

        .btn-primary:hover {
            background: linear-gradient(135deg, #ff4b2b, #ff416c);
            box-shadow: 0 0 10px rgba(255, 75, 43, 0.8);
        }

    .btn-secondary {
        background: rgba(80, 80, 80, 0.8);
        color: white;
    }

        .btn-secondary:hover {
            background: rgba(110, 110, 110, 0.9);
        }

    .back-link {
        margin-top: 20px;
        display: block;
        text-align: center;
        color: #ff416c;
        font-weight: bold;
    }

        .back-link:hover {
            text-decoration: underline;
        }
</style>

<div class="edit-entry-container">
    <div class="edit-entry-header">
        <h1>@ViewData["Title"]</h1>
        <h3>Edit Entry Details</h3>
    </div>

    <div class="card">
        <form asp-action="UpdateByUser" asp-route-id="@Model.entries_Id">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="entries_Id" />

            <div class="form-group">
                <label asp-for="entries_name" class="control-label">Entry Name</label>
                <input asp-for="entries_name" class="form-control" />
                <span asp-validation-for="entries_name" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="description" class="control-label">Description</label>
                <textarea asp-for="description" class="form-control"></textarea>
                <span asp-validation-for="description" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="location" class="control-label">Location</label>
                <input asp-for="location" class="form-control" />
                <span asp-validation-for="location" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="images" class="control-label">Images</label>
                <input asp-for="images" class="form-control" />
                <span asp-validation-for="images" class="text-danger"></span>
            </div>

            <div class="form-group" style="display: none;">
                <label asp-for="timeline_Id" class="control-label">Timeline ID</label>
                <input asp-for="timeline_Id" class="form-control" />
                <span asp-validation-for="timeline_Id" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Save Changes" class="btn btn-primary" />
            </div>
        </form>
    </div>

    <div class="text-center">
        <a class="back-link" asp-controller="UserPage" asp-action="DashBoard">Back to Profile</a>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
