@model Passion_Project.Models.TimelineDto

@{
    ViewData["Title"] = "ConfirmDelete";
}

<h1>ConfirmDelete</h1>

<h3>Are you sure you want to delete this timeline?</h3>
<div>
    <h4>Timeline</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.timeline_name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.timeline_name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.date)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.date)
        </dd>
       
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.description)
