@model Passion_Project.Models.TimelineDto

@{
    ViewData["Title"] = "New Timeline";
}

<style>
    body {
        background-color: black;
        color: white;
        font-family: 'Poppins', sans-serif;
    }

    .new-timeline-container {
        max-width: 900px;
        margin: 40px auto;
        padding: 20px;
    }

    .timeline-header {
        text-align: center;
        margin-bottom: 30px;
    }

    .card {
        background: rgba(25, 25, 25, 0.9);
        padding: 2rem;
        border-radius: 12px;
        box-shadow: 0 0 15px rgba(255, 255, 255, 0.1);
        margin-bottom: 20px;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

        .card:hover {
            transform: translateY(-3px);
            box-shadow: 0 0 20px rgba(255, 255, 255, 0.15);
        }

    .form-group label {
        color: floralwhite;
        font-weight: bold;
    }

    .back-link {
        margin-top: 20px;
        display: block;
        text-align: center;
        color: #ff416c;
        font-weight: bold;
    }

        .back-link:hover {
            text-decoration: underline;
        }

    .submit-btn {
        background-color: #ff416c;
        color: white;
        font-weight: bold;
    }

        .submit-btn:hover {
            background-color: #ff1e55;
        }
</style>

<div class="new-timeline-container">
    <div class="timeline-header">
        <h1>@ViewData["Title"]</h1>
        <h3>Create a New Timeline</h3>
    </div>

    <div class="card">
        <form asp-action="AddFromUser">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="timeline_name" class="control-label">Timeline Name</label>
                <input asp-for="timeline_name" class="form-control" />
                <span asp-validation-for="timeline_name" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="date" class="control-label">Date</label>
                <input asp-for="date" class="form-control" type="date" />
                <span asp-validation-for="date" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="description" class="control-label">Description</label>
                <textarea asp-for="description" class="form-control"></textarea>
                <span asp-validation-for="description" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn submit-btn" />
            </div>
        </form>
    </div>

    <div>
        <a class="back-link" asp-controller="UserPage" asp-action="Dashboard">Back to Profile</a>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
