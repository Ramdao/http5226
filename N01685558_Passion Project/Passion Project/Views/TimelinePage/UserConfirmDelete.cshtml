@model Passion_Project.Models.TimelineDto

@{
    ViewData["Title"] = "ConfirmDelete";
}

<style>
    body {
        background-color: black;
        color: white;
        font-family: 'Poppins', sans-serif;
    }

    .confirm-delete-container {
        max-width: 900px;
        margin: 40px auto;
        padding: 20px;
    }

    .confirm-delete-header {
        text-align: center;
        margin-bottom: 30px;
    }

    .card {
        background: rgba(25, 25, 25, 0.9);
        padding: 1.5rem;
        border-radius: 12px;
        box-shadow: 0 0 15px rgba(255, 255, 255, 0.1);
        margin-bottom: 20px;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

        .card:hover {
            transform: translateY(-3px);
            box-shadow: 0 0 20px rgba(255, 255, 255, 0.15);
        }

    .delete-info {
        margin-bottom: 20px;
    }

    .timeline-details dt {
        font-weight: bold;
    }

    .timeline-details dd {
        margin-bottom: 10px;
        background: rgba(50, 50, 50, 0.8);
        padding: 8px 12px;
        border-radius: 8px;
    }

    .btn {
        display: inline-block;
        padding: 10px 16px;
        border-radius: 6px;
        font-weight: bold;
        text-decoration: none;
        transition: all 0.3s ease;
    }

    .btn-danger {
        background: linear-gradient(135deg, #ff416c, #ff4b2b);
        color: white;
        border: none;
    }

        .btn-danger:hover {
            background: linear-gradient(135deg, #ff4b2b, #ff416c);
            box-shadow: 0 0 10px rgba(255, 75, 43, 0.8);
        }

    .btn-secondary {
        background: rgba(80, 80, 80, 0.8);
        color: white;
    }

        .btn-secondary:hover {
            background: rgba(110, 110, 110, 0.9);
        }
</style>

<div class="confirm-delete-container">
    <div class="confirm-delete-header">
        <h1>@ViewData["Title"]</h1>
        <h3>Are you sure you want to delete this timeline?</h3>
    </div>

    <div class="card">
        <div class="delete-info">
            <h4>Timeline Details</h4>
            <hr />
            <dl class="row timeline-details">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.timeline_name)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.timeline_name)
                </dd>

                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.date)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.date)
                </dd>

                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.description)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.description)
                </dd>
            </dl>
        </div>

        <form asp-action="UserDelete" asp-route-id="@Model.timeline_Id">
            <input type="hidden" asp-for="timeline_Id" />
            <div class="text-center">
                <input type="submit" value="Delete" class="btn btn-danger" />
            </div>
        </form>

        <div class="text-center mt-3">
            <a class="btn btn-secondary" asp-controller="UserPage" asp-action="DashBoard">Back to Profile</a>
        </div>
    </div>
</div>
